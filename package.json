{
  "name": "findingmodelforge",
  "version": "1.0.0",
  "description": "Tool set for creating finding models for defining the semantic labels for imaging findings.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./static/css/output.css",
    "watch:css": "npx @tailwindcss/cli -i ./src/input.css -o ./static/css/output.css --watch",
    "download:flowbite": "curl -o static/js/flowbite.min.js https://cdnjs.cloudflare.com/ajax/libs/flowbite/3.1.2/flowbite.min.js",
    "download:alpine": "curl -o static/js/alpine.min.js https://unpkg.com/alpinejs@3.13.7/dist/cdn.min.js",
    "download:libs": "npm run download:flowbite && npm run download:alpine",
    "build": "npm run build:css && npm run download:libs",
    "setup": "npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openimagingdata/FindingModelForge.git"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.1",
    "tailwindcss": "^4.1.1"
  },
  "dependencies": {
    "flowbite": "^3.1.2"
  }
}
