# Application Configuration
APP_NAME="FastAPI Starter"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT="development"

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Security Configuration
SECRET_KEY="your-secret-key-here-replace-with-random-string"
